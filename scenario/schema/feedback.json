{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "allOf": [
    { "$ref": "file:///Users/shlomi/projects/scenario/scenario/schema/scenario.json" },
    { "properties": {
        "log": {
          "type": "object",
          "properties": {
            "quotes": {

              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "object",
                    "properties": {
                      "en": {
                        "type": "string",
                        "enum": [
                          "output",
                          "input",
                          "printing"
                        ]
                      },
                      "he": {
                        "type": "string",
                        "enum": [
                          "פלט",
                          "קלט",
                          "הדפסה"
                        ]
                      }
                    },
                    "required": [
                      "en",
                      "he"
                    ]
                  },
                  "name": {
                    "type": "string"
                  },
                  "value": {
                    "type": [
                      "string",
                      "number"
                    ]
                  }
                },
                "required": [
                  "type",
                  "value"
                ]
              }
            },
            "text": { "type": "string" }
          },
          "required": [
            "quotes",
            "text"
          ]

        },
        "result": {
          "type": "object",
          "properties": {
            "bool": {
              "type": "boolean"
            },
            "text": {
              "type": "string",
              "enum": [
                "הצלחה",
                "אי-הצלחה"
              ]
            }
          },
          "required": [
            "bool",
            "text"
          ]
        },
        "feedback": {
          "type": "object",
          "properties": {
            "type": {
              "oneOf": [
                { "type": "string" },
                { "type": "null" }
              ]
            },
            "text": {
              "oneOf": [
                { "type": "string" },
                { "type": "null" }
              ]
            }
          }
        },
        "exit_code": {
          "oneOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 255
            },
            { "type": "null" }
          ]
        },
        "signal_code": {
          "oneOf": [
            {
              "type": "number",
              "minimum": 1,
              "maximum": 30
            },
            { "type": "null" }
          ]
        }
      }
    }
  ],
  "required": [
    "log",
    "result",
    "feedback",
    "exit_code",
    "signal_code"
  ]
}
