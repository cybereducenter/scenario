{
  "$schema": "http://json-schema.org/schema#",
  "id": "https://raw.github.com/shlomihod/scenario/tree/master/scenario/schema/feedback.json",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "verbosity": {
      "type": "number",
      "minimum": 0,
      "maximum": 5
    },
    "flow": {
      "type": "boolean"
    },
    "strictness": {
      "type": "boolean"
    },
    "args": {
      "type": "array",
      "items": {
        "type": [
          "string",
          "number"
        ]
      },
      "dialogue": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "output",
                "input"
              ]
            },
            "name": {
              "type": "string"
            },
            "value": {
              "type": "string"
            }
          },
          "required": [
            "type",
            "name",
            "value"
          ]
        }
      }
    },
    "log": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "en": {
            "type": "string",
            "enum": [
              "output",
              "input",
              "print"
            ]
          },
          "he": {
            "type": "string",
            "enum": [
              "פלט",
              "קלט",
              "הדפסה"
            ]
          },
          "name": {
            "type": "string"
          },
          "value": {
            "type": [
              "string",
              "number"
            ]
          }
        },
        "required": [
          "type",
          "value"
        ]
      }
    },
    "result": {
      "type": "object",
      "properties": {
        "bool": {
          "type": "boolean"
        },
        "text": {
          "type": "string",
          "enum": [
            "הצלחה",
            "אי-הצלחה"
          ]
        }
      },
      "required": [
        "bool",
        "text"
      ]
    },
    "feedback": {
      "type": "string"
    },
    "exit_code": {
      "oneOf": [
        {
          "type": "number",
          "minimum": 1,
          "maximum": 30
        },
        { "type": "null" }
      ]
    },
    "signal_code": {
      "oneOf": [
        {
          "type": "number",
          "minimum": 1,
          "maximum": 30
        },
        { "type": "null" }
      ]
    },
  },
  "required": [
    "id",
    "name",
    "description",
    "verbosity",
    "flow",
    "strictness",
    "args",
    "dialogue"
    "log",
    "result",
    "feedback",
    "exit_code",
    "signal_code"
  ]
}
