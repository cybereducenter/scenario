{
  "$schema": "http://json-schema.org/schema#",
  "id": "https://github.com/shlomihod/scenario/tree/master/scenario/schema/scenario.json",
  "type": "object",
  "properties": {
    "id": {"type": "string"},

    "name": {"type": "string"},

    "verbosity": {
      "type": "number",
      "minimum": 0,
      "maximum": 5
    },

    "flow": {"type": "boolean"},

    "strictness": {"type": "boolean"},

    "args": {
      "type": "array",
      "items": {
        "type": ["string", "number"]
      }
    },
    "dialogue": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["args", "output", "input"]
          },
          "name": {"type": "string"},
          "value": {"type": ["string", "number"]}
        },
        "required": ["type", "name", "value"]
      }
    }
  },

  "required": ["id", "name", "verbosity", "flow", "strictness", "args", "dialogue"]
}
